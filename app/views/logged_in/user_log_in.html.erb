
	<!-- CENTRAL PANEL -->
	<div class="col-md-8 central-panel">
		<!-- STAFF -->
		<div class="row">
			<div class="col-md-5 col-md-offset-1 logged-margin-top">
				<h1><%= link_to "Staff", staffs_path %></h1>
				<small>page number: </small>
			</div>
		</div>
		<div class="row">
			<!-- Dummy col -->
			<div class="col-md-1 staff-styling arrow" id="prev">
				&lArr;
			</div>
			
			<div id="staff-member-display">
				<% @staffs.each do |t| %>

				<div class="col-md-2 staff-styling">
					<%= link_to staff_path(t) do%>
					<div class="well">
						Name: <%= t.name %> <br>
						Happiness: <%= t.happiness %> <br>
						Salary: <%= t.salary %> <br>
						Performance: <%= t.performance %> <br>
						
					</div>
					<% end %>
				</div>
				<% end %>
			</div>
			
			
			<div class="col-md-1 staff-styling arrow" id="next">
				&rArr;
			</div>
			
		</div>
		
		<!-- CUSTOMER PART -->
		<div class="row">
			<div class="col-md-5 col-md-offset-1 logged-margin-top">
				<h1><%= link_to "Customers", customers_path %></h1>
				<small>page number: </small>
			</div>
		</div>
		<div class="row">
			<!-- Dummy col -->
			<div class="col-md-1 staff-styling arrow" id="prev-cust">
				&lArr;
			</div>
			
			<div id="customer-member-display">
				<% @customers.each do |t| %>

				<div class="col-md-2 staff-styling">
					<%= link_to customer_path(t) do%>
					<div class="well">
						Name: <%= t.name %> <br>
						Affluence: <%= t.affluence %> <br>
						Handled by: <%= t.staff.name %> <br>
					</div>
					<% end %>

				</div>
				<% end %>
			</div>
			
			
			<div class="col-md-1 staff-styling arrow" id="next-cust">
				&rArr;
			</div>
			
		</div> <!-- END OF CUSTOMER -->
	</div> <!--  END-->
	

